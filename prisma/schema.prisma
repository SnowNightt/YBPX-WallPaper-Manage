generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model image {
  id          Int      @id @default(autoincrement()) @db.UnsignedInt()
  fileName    String
  created_at  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
}

